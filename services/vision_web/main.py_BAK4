    rec = _find_record(frame_id)
    if not rec:
        raise HTTPException(status_code=404, detail="frame_id not found")
    p = _resolve_media(rec, "frame")
    if not p:
        raise HTTPException(status_code=404, detail="frame.jpg not found")
